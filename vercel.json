{
    "version": 2,
    "builds": [
        {
            "src": "Backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/Backend/app.py"
        },
        {
            "src": "/(assets/.*|.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|map))",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}